                android:text="@string/txt_producto_1"/>

            <TextView
                android:id="@+id/btn_result1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/hash"/>

        </LinearLayout>

